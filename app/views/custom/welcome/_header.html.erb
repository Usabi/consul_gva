<% if header.present? %>
  <div class="jumbo highlight" style="background-image: url(<%= header.image_url(:large)%>);">
    <div class="title-background">
      <div class="row">
        <div class="small-12 medium-6">
          <span><%= header.label %></span>
          <h1><%= header.title %></h1>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 <%= "medium-9 small-centered text-center" unless header.image.present? %>">
        <p class="lead"><%= header.description %></p>
        <div class="small-12 <%= "small-centered" unless header.image.present? %>">
          <% if (I18n.locale == :val)%>
            <%='valenciano'%>
            <%= link_to t("welcome.welcome.more_resources"), 'http://participem.gva.es/va', class: "button " %>
            <%= link_to header.link_text, header.link_url, class: "button " %>
          <% else %>
            <%= link_to t("welcome.welcome.more_resources"), 'http://participem.gva.es/es/portal-de-participacion', class: "button " %>
            <%= link_to header.link_text, 'http://participem.gva.es/es/processos-participatius', class: "button " %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
