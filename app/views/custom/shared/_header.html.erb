<% if header.present? %>
  <div class="jumbo highlight" style="background-image: url(<%= polymorphic_path(header.image.variant(:large)) %>);">
    <div class="title-background">
      <div class="row">
        <div class="small-12 medium-6 column">
          <span><%= header.label %></span>
          <h1><%= header.title %></h1>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 column <%= "medium-9 small-centered text-center" unless header.image.present? %>">
        <p class="lead"><%= header.description %></p>
        <div class="small-12 medium-6 large-4 <%= "small-centered" unless header.image.present? %>">
          <% if header.link_text.present? && header.link_url.present? %>
            <%= link_to header.link_text, header.link_url, class: "button " %>
          <% end %>
          <% if header.link_text_2.present? && header.link_url_2.present? %>
            <%= link_to header.link_text_2, header.link_url_2, class: "button " %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
